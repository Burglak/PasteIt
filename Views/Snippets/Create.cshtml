@model PasteIt.Models.Snippet

@{
    ViewData["Title"] = "Create Snippet";
}

<h3>Create a new snippet</h3>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- title -->
            <div class="form-group mb-4">
                <input asp-for="Title" class="form-control" placeholder="Title (optional)" style="background-color: #222; color: #dcdcdc;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- text -->
            <div class="form-group mb-4">
                <textarea asp-for="Text" class="form-control" style="height: 50vh; background-color: #222; color: #dcdcdc;" placeholder="Context (required)"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <!-- expiration -->
            <div class="form-group mb-4">
                <label for="expireOption" class="text-light">Expire in</label>
                <select name="expireOption" class="form-control w-auto" style="width: 200px; background-color: #222; color: #dcdcdc;">
                    <option value="60">One Hour</option>
                    <option value="1440">One Day</option>
                    <option value="10080">One Week</option>
                    <option value="43200">One Month</option>
                </select>
            </div>

            <!-- submit -->
            <div class="form-group mb-4">
                <input type="submit" value="Create" class="btn btn-primary" style="width: 20%;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}